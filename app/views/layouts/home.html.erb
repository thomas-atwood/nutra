<!--  
	Just here to override application.html.erb 
	All of the layout/css for the home page is in views/home/index.html.erb
-->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Wired Differently &middot; Home Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
	<%= stylesheet_link_tag "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	
	<!-- Foxycart Files --> 
	<link rel="stylesheet" href="//cdn.foxycart.com/static/scripts/colorbox/1.3.18/style1_fc/colorbox.css" type="text/css" media="screen" charset="utf-8" />
	<script src="//cdn.foxycart.com/wired-different/foxycart.colorbox.js" type="text/javascript" charset="utf-8"></script>
	<!-- end Foxycart files  -->
		
	<style type="text/css">
 		a:hover { cursor:pointer;} /* makes login/edit buttons pointers */
		.logged-in-as { margin-top: -5px;} /* pulls logged in as msg up nearer top nav bar */
	</style>
	
    <style>
	 	/* Customize the NAVBAR for home page; adjust margin-bottom ---- */ 
	    
	    .navbar-wrapper {
	      margin-bottom: -90px; /* Negative margin to pull up carousel. 90px is roughly margins and height of navbar. */
	    }

	 	/* Marketing content below hero ------ */

	    /* Center align the headings within the three columns below the carousel */
	    .marketing .span4 {
	      text-align: left;
	    }
	    .marketing h2 {
	      font-weight: normal;
		  text-align:left; padding-left:10px;
	    }
	    .marketing .span4 p {
	      margin-left: 10px;
	      margin-right: 10px;
	    } 

		/* Footer — this is slightly different than what is in styles.css.scss --- */
		footer { 
				margin-top:40px; 
				border-top:none;
				padding-top: 20px;
				padding-bottom: 20px;
				background-color:#FFFEF3;
		}

    </style>


    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->


	<%= yield :head %>
	
  </head>

  <body>

	<!-- nav bar —————————————————————————————————————————————— -->

	<%= render "/shared/navbar_wrapper" %>
	
	 <!-- Closes login modal on successful login -->
	<% if current_user != nil %>
		<script>
			parent.$.fn.colorbox.close();
		</script>
	<% end %>
	
	<!-- Rails flash messages ————————————————————————————————— -->
	<!-- drop them; used only by devise, and unnecessary there 
	<p class="notice"><## notice %></p>
	<p class="alert"><## alert %></p>
	-->
	
	<!-- main (image and text overlays ) —————————————————————— -->
	
	<%= yield :main %>
	
	<!-- footer ——————————————————————————————————————————————— -->

	 <footer>
		<div class="container">	
	        <p class="pull-right"><a href="#">Back to top</a></p>
		    <p>&copy; 2013 Blue Spot Health, Inc. &middot; <a href="#" class="footer_modal_link">Privacy</a> &middot; <a href="#" class="footer_modal_link">Terms</a></p>		
		</div>
     </footer>


	<!-- modal displays ——————————————————————————————————————— -->
	
	<%= render "/shared/modal_displays" %>

	<!-- javascript —————————————————————————————————— -->

	<!-- Gooogle analytics ————————————————————————-->
	
	<%= render "shared/google_analytics" %>

  </body>
</html>
	